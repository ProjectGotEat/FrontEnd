<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:elevation="6dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_member2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="6dp"
                app:cardCornerRadius="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textViewIsFinished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="3"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:layout_gravity="fill_vertical"
                android:columnCount="4"
                android:rowCount="4">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="#6C6C6C"
                    android:textSize="14sp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="2"/>

                <TextView
                    android:id="@+id/textViewEachPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnSpan="3"/>

                <TextView
                    android:id="@+id/textViewMittingLocationText"
                    android:layout_width="160dp"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/textViewParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnSpan="2"/>

                <TextView
                    android:id="@+id/textViewCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="14sp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textColor="#43B43D"/>

                <CheckBox
                    android:id="@+id/btnScrap"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:layout_gravity="right"
                    android:background="@drawable/custom_checkbox"
                    android:button="@null"/>

            </GridLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</layout>